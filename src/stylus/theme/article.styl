article
  margin auto
  width 1000px
  color #333
  font-family 'Nanum Myeongjo', sans-serif
  margin-bottom 100px

  section.content

    h1
      font-size 40px
      line-height 46px

    h2
      font-size 26px
      line-height 32px
      margin-bottom 40px

    pre

      code
        padding 0 40px

    blockquote
      margin 0
      border-left 10px solid #acacac
      padding 20px 20px
      background-color #eee

      p
        margin 0
        margin-bottom 10px

        &:last-child
          margin 0

    a
      color #fb590a
      text-decoration none

      &:hover
        border-bottom 1px solid #fb590a

    p
      font-size 20px
      letter-spacing 1px
      line-height 30px
      margin-bottom 30px

    ul
      margin 40px 0

      li
        margin-bottom 10px
        letter-spacing 1px
